<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/fundinho">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="">

        <TextView
        android:text="Welcome Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginBottom=""
            />

        <TextView
            android:text="Lorem ipsum dolor nim ad minim veniamsit amet, consectetur adipisicing elit, sed do eiusmod
tempor incididunt ut labore et dolore magna aliqua. "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#85C5C5C5"
            android:textAlignment="center"
            android:textSize="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />

        <ImageView
            android:layout_width="91dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:scrollbarSize="20dp"

            />

        <Button
            android:id="@+id/btnEntrar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bordinha"
            android:text="@string/entrar"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" />

        <Button
            android:onClick="sairSistema"
            android:id="@+id/btnSair"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bordinha"
            android:text="@string/sair"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
             />


    </LinearLayout>


</LinearLayout>